<div id="sendcode-block" class="w-25">
<%= form_with  url: session_sendcode_url, :method => 'post', id: 'sendcode-form' do  |form| %>
  <h1 class="h2 my-5 fw-normal">Авторизация</h1>
  <% if @error %>
    <h3 class="h3 my-3 fw-normal clr-red"><%=@error%></h1>
  <%end%>
  <h1 class="h4 mb-3 fw-normal">На указанный номер поступит звонок,<br>запомните последние 4 цифры</h1>
  <div class="form-floating my-2">
    <%= form.telephone_field(:phone, required: true, class: "form-control d-inline my-2", id: 'phone-input', pattern: "([\+]7|8)\s*[\(]{0,1}9[0-9]{2}[\)]{0,1}[- ]{0,1}[0-9]{3}[- ]{0,1}[0-9]{2}[- ]{0,1}[0-9]{2}\s*", placeholder: "+7 (901) 502-04-56" ) %>
    <span ></span>
    <p class="py-1">допустимые форматы:<br>89xxxxxxxxx<br>+79xxxxxxxxx<br>+7 9xx-xxx-xxxx<br>+7 (9xx) xxx-xx-xx</p>
    <label for="phone-input">телефон</label>
  </div>
  <%= form.submit('Отправить код',  class: "h-3 rem-3 w-100  _btn-primary mt-3") %>
<% end %>
  </div>
