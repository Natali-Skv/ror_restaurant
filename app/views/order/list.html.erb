<%# сверстать %>
<div id="order-list-block">
  <% @orders.each do |order| %>
    <div class="order-block my-5 container p-3">
      <div class="row">
        <div class="col-3 h4">#
          <%= order.id %></div>
        <div class="col-9 h4 text-end"><%= order.date.strftime("%k:%M, %d.%m.%Y") %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col-6">
          <h4 class="mt-5">Адрес доставки:</h4><p class="h5 mb-5"><%= order.address %></p>
          <h4 class="mt-5">Стоимость заказа:</h4><p class="h5 mb-5"><%= order.total %>
            ₽</p>
        </div>
        <div class="col-6">
          <div class=" d-flex flex-column flex-shrink-0 p-3 mb-3 order-list-cart-block">
            <div class="text-center">
              <p class=" b-3 mb-md-0 text-decoration-none clr-grey h3 ">Заказ
              </p>
            </div>
            <div class=" d-flex overflow-auto p-1 mt-3 mb-md-0 mr-md-3 order-cart">
              <ul class="nav nav-pills flex-column mb-auto">
                <% order.cart.each do |dish| %>
                  <li>
                    <div class="p-2 my-2 dish-in-cart">
                      <img
                        class="ms-1 d-inline-block mb-3 cart-dish-img"
                        src="/dishes/<%=dish.image_path%>"
                      >
                      <div class="ms-1 d-inline-block mb-3 align-top dish-in-cart-info">
                        <p class="h5"><%= dish.name %></p>
                        <div class="d-inline-block me-2 my-3"><%= dish.calories %>
                          ккал</div>
                        <div class="d-inline-block my-2"><%= dish.weight %>
                          г</div>
                        <div>
                          <div class="mt-3 h5 text-end"><%= dish.count %>
                            X
                            <%= dish.price %>
                            ₽</div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
